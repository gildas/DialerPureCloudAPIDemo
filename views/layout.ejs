    <link rel='stylesheet' href='/stylesheets/style.css' />
<% } %>
    <script language='javascript'>
      "use strict";

      var purecloud_organization = null;
      var purecloud_application  = null;
      var purecloud_session      = null;
    </script>
  </head>
  <body>
